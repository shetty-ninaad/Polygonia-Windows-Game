            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button x:Name="button" Content="TRIANGLE" Grid.Column="3" HorizontalAlignment="Left" Height="34" Margin="10,253,0,0" VerticalAlignment="Top" Width="164" Opacity="0.9" FontFamily="Segoe UI Black" Click="button_Click2" Grid.Row="1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFCDC637" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_Copy" Content="TUTORIAL" Grid.Column="3" HorizontalAlignment="Left" Height="34" Margin="10,76,0,0" VerticalAlignment="Top" Width="164" Opacity="0.9" FontFamily="Segoe UI Black" Grid.Row="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFCDC637" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_Copy1" Content="EXIT" Grid.Column="3" HorizontalAlignment="Left" Height="34" Margin="10,17,0,0" VerticalAlignment="Top" Width="164" Opacity="0.9" FontFamily="Segoe UI Black" Grid.Row="2" Click="button_Click3">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFCDC637" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_Copy2" Content="SQUARE" HorizontalAlignment="Left" Height="34" Margin="10,196,0,0" VerticalAlignment="Top" Width="164" Opacity="0.9" FontFamily="Segoe UI Black" Grid.Row="1" Grid.Column="3" Click="button_Click1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFCDC637" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Frame x:Name="myFrame"  NavigationUIVisibility="Hidden" Content="Frame" HorizontalAlignment="Left" Height="517" VerticalAlignment="Top" Width="723" Margin="0,0,-37,0" Grid.RowSpan="3" Grid.ColumnSpan="4" Visibility="Hidden"/>

    </Grid>
</Window>
