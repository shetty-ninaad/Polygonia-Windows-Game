<Window x:Class="Polygonia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Polygonia"
        mc:Ignorable="d"
        Title="MainWindow" d:DesignWidth="660.105" d:DesignHeight="550" Cursor="Pen" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Opacity="0.7" BorderThickness="5" WindowStyle="None">
    <Grid Margin="0,-20,-36,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="364*"/>
            <RowDefinition Height="163*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="369*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" HorizontalAlignment="Left" Height="594" Margin="-30,10,-152,-44" VerticalAlignment="Top" Width="868" Source="images/icon.jpg" Grid.ColumnSpan="4" RenderTransformOrigin="0.52,0.778" Grid.RowSpan="3"/>
